{
  "scripts": {
    "dev": "concurrently --names 'BROWSERSYNC,DOCS' --kill-others 'npm run bsync' 'npm run docs-livebuild'",
    "bsync": "./node_modules/.bin/browser-sync --watch",
    "docs": "./node_modules/.bin/jsdoc gp.js --template ./node_modules/docdash/ --readme ./README.md --destination ./docs",
    "docs-livebuild": "onchange gp.js README.md -- npm run docs" 
  },
  "dependencies": {
    "browser-sync": "^3.0.4",
    "concurrently": "^9.2.1",
    "docdash": "^2.0.2",
    "jsdoc": "^4.0.4",
    "onchange": "^7.1.0"
  }
}
